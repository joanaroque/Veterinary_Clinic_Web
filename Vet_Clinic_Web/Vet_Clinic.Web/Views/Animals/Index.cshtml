@model IEnumerable<Vet_Clinic.Web.Data.Entities.Animal>

<section class="content-header">
    <h1>
        Animals
    </h1>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Animals</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Animals</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Photo</th>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Weight</th>
                                <th>Sterilization</th>
                                <th>DateOfBirth</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                @using (Html.BeginForm("Delete", "Animals", new { id = item.Id }))
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@Url.Content(item.ImageUrl)" alt="Image" style="width:100px;height:150px;max-width:100%; height:auto" />
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Weight)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Sterilization)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            <input type="submit" value="Delete"
                                                   onclick="return confirm('Are you sure you want to delete @item.Name?')" />
                                        </td>
                                    </tr>
                                }
                            }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<!-- page script -->
