@model Vet_Clinic.Web.Data.Entities.Appointment

@{
    ViewData["Title"] = "Create";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Appointments
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Add Appointment</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" asp-action="Create" enctype="multipart/form-data">
            <div class="box-body">
                <div class="form-group">
                    <label asp-for="Treatment" class="col-sm-2 control-label"></label>
                    <input asp-for="Treatment" class="form-control" />
                    <span asp-validation-for="Treatment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AppointmentSchedule" class="col-sm-2 control-label"></label>
                    <input asp-for="AppointmentSchedule" class="form-control" />
                    <span asp-validation-for="AppointmentSchedule" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AppointmentObs" class="col-sm-2 control-label"></label>
                    <input asp-for="AppointmentObs" class="form-control" />
                    <span asp-validation-for="AppointmentObs" class="text-danger"></span>
                </div>
                <div class="box-footer">
                    <a asp-action="Index" class="btn btn-warning pull-right">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-success " />
                </div>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>