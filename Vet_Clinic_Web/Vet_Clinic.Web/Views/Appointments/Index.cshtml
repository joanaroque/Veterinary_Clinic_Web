@model IEnumerable<Vet_Clinic.Web.Data.Entities.Appointment>

@{
    ViewData["Title"] = "Index";

}
<section class="content-header">

    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Appointments</li>
    </ol>
</section>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />


<br />
<p>
    <a asp-action="AddDays" class="btn btn-foursquare"><i class="glyphicon glyphicon-plus"></i> Add Days</a>
</p>

<section class="content">
    <div class="row">
        <div class="col-md-10 center-block">
            <div style="text-align:center">
                <h3 class="card-title">Appointments</h3>
            </div>
            <div class="box box-info" style="margin-top:10px">

                <div class="box-header with-border">
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" id="MyTable">
                            <thead>
                                <tr>
                                    @if (this.User.IsInRole("Admin"))
                                    {
                                        <th>
                                            @Html.DisplayNameFor(model => model.User.FullName)
                                        </th>
                                    }
                                    <th>
                                        @Html.DisplayNameFor(model => model.Date)
                                    </th>
                                    <th>
                                        Doctor
                                    </th>
                                    <th>
                                        Owner
                                    </th>
                                    <th>
                                        Pet
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AppointmentObs)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsAvailable)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    @using (Html.BeginForm("UnSchedule", "Appointments", new { id = item.Id }))
                                    {
                                        <tr>
                                            @if (this.User.IsInRole("Admin"))
                                            {
                                                <th>
                                                    @Html.DisplayFor(modelItem => item.User.FullName)
                                                </th>
                                            }
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Doctor.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Owner.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pet.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.AppointmentObs)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsAvailable)
                                            </td>
                                            <td>
                                                @if (item.IsAvailable)
                                                {
                                                <a asp-action="Schedule" class="btn btn-default" asp-route-id="@item.Id"><i class="fa fa-scissors"></i> Schedule</a>
                                                }
                                                else
                                                {
                                                    <input type="submit" value="Delete" class="btn btn-danger pull-right"
                                                           onclick="return confirm('Are you sure you want to delete appointment @item.Id?')" />
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}
