@model IEnumerable<Vet_Clinic.Web.Data.Entities.Appointment>

@{
    ViewData["Title"] = "Index";

}
<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Appointments</li>
    </ol>
</section>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />


<br />
<p>
    <a asp-action="Schedule" class="btn btn-foursquare"><i class="glyphicon glyphicon-plus"></i> Schedule</a>
</p>

<section class="content">
    <div class="row">
        <div class="col-md-12 center-block">
            <div style="text-align:center">
                <h3 class="card-title">Appointments</h3>
            </div>
            <div class="box box-info" style="margin-top:10px">

                <div class="box-header with-border">
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" id="MyTable">
                            <thead>
                                <tr>
                                    @if (this.User.IsInRole("Admin"))
                                    {
                                        <th>
                                            Created By
                                        </th>
                                        <th>
                                            Created Date
                                        </th>
                                    }
                                    <th>
                                        @Html.DisplayNameFor(model => model.ScheduledDate)
                                    </th>
                                    <th>
                                        Doctor
                                    </th>
                                    <th>
                                        Owner
                                    </th>
                                    <th>
                                        Pet
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AppointmentObs)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        @if (this.User.IsInRole("Admin"))
                                        {
                                            <th>
                                                @Html.DisplayFor(modelItem => item.CreatedBy.FullName)
                                            </th>
                                            <th>
                                                @Html.DisplayFor(modelItem => item.CreateDate)
                                            </th>
                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ScheduledDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Doctor.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Owner.User.FullName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Pet.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AppointmentObs)
                                        </td>
                                        <td id="@item.Id">
                                            <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i> </a>
                                            <a asp-action="UnSchedule" asp-route-id="@item.Id" class="btn btn-danger  pull-right" id="btnDelete"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });

        $(document).ready(function () {
            let id = 0;
            $('a[id*=btnDelete]').click(function () {
                debugger;
                id = $(this).parent()[0].id;
                $("#deleteDialog").modal('show');
                return false;
            });
            $("#btnNoDelete").click(function () {
                $("#deleteDialog").modal('hide');
                return false;
            });
            $("#btnYesDelete").click(function () {
                window.location.href = '/Appointments/UnSchedule/' + id;
            });
        });
    </script>
}
