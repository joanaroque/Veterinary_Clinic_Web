@model IEnumerable<Vet_Clinic.Web.Data.Entities.User>

@{
    ViewData["Title"] = "Index";
}
<section class="content-header">

    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Admin</li>
    </ol>
</section>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<a asp-action="Register" class="btn btn-primary" asp-controller="Account">
    <i class="glyphicon glyphicon-plus"></i> Add new user
</a>

<section class="content">
    <div class="row">
        <div class="col-md-7 center-block">
            <div style="text-align:center">
                <h3 class="card-title">List of Users</h3>
            </div>
            <div class="box box-info" style="margin-top:10px">

                @if (Model.Any())
                {

                    foreach (var user in Model)
                    {
                        @using (Html.BeginForm("DeleteUser", "Administrator", new { id = user.Id }))
                        {
                            <div class="card-header">
                                User Id : @user.Id
                            </div>

                            <div class="card-body">
                                <h4 class="card-title">@user.UserName</h4>
                            </div>

                            <div class="card-footer">
                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                    <a asp-controller="Administrator" asp-action="EditUser"
                                       asp-route-id="@user.Id" class="btn btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>

                                    <a asp-controller="Administrator" asp-action="DetailsUser"
                                       class="btn btn-warning"
                                       asp-route-id="@user.Id">
                                        <i class="fa fa-list"></i>
                                    </a>

                                    <input type="submit" value="Delete" class="btn btn-danger pull-right"
                                           onclick="return confirm('Are you sure you want to delete @user.FullName?')" />
                                </form>
                            </div>
                        }
                    }
                }
                else
                {
                    <div class="card">
                        <div class="card-header">
                            No users created yet
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                Use the button below to create a user
                            </h5>
                            <a class="btn btn-primary" style="width:auto"
                               asp-controller="Account" asp-action="Register">
                                Add new user
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script src="~/js/main.js"></script>

}
