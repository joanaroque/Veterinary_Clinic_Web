@model Vet_Clinic.Web.Models.EditRoleViewModel

@{
    ViewData["Title"] = "EditRole";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-5 center-block">

                <div style="text-align:center">
                    <h3 class="card-title">Edit Role</h3>
                </div>

                <div class="box box-info" style="margin-top:10px">
                    <div class="box-header with-border">

                        <form method="post" class="mt-3">
                            <div class="card-body">
                                <div class="form-group">

                                    <div class="row">
                                        <div class="col-sm-2">
                                            <div class="form-group">
                                                <label asp-for="Id" class="control-label"></label>
                                                <input asp-for="Id" class="form-control">
                                                <span asp-validation-for="Id" class="text-danger"></span>
                                            </div>

                                            <div class="col-sm-2">
                                                <div class="form-group">
                                                    <label asp-for="RoleName" class="control-label"></label>
                                                    <input asp-for="RoleName" class="form-control">
                                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div asp-validation-summary="All" class="text-danger"></div>

                                    <div class="form-group">
                                        <input type="submit" value="Update" class="btn btn-primary " />
                                        <a asp-action="ListRoles" class="btn btn-warning pull-right"><i class="fa fa-backward"></i> Back</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    <h3>Users in this role</h3>
                                </div>
                                <div class="card-body">
                                    @if (Model.Users.Any())
                                    {
                                        foreach (var user in Model.Users)
                                        {
                                            <h5 class="card-title">@user</h5>
                                        }
                                    }
                                    else
                                    {
                                        <h5 class="card-title">None at the moment</h5>
                                    }
                                </div>

                                <div class="card-footer">
                                    <a asp-controller="Admins" asp-action="EditUsersInRole"
                                       asp-route-roleId="@Model.Id" class="btn btn-primary">
                                        Add or remove users from this role
                                    </a>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

