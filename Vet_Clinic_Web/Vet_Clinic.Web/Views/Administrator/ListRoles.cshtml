@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "ListRoles";
}

<section class="content-header">

    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Roles</li>
    </ol>
</section>


<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />


    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
       asp-controller="Administrator"><i class="glyphicon glyphicon-plus"></i> Add new role</a>


<section class="content">
    <div class="row">
        <div class="col-md-12 center-block">
            <div style="text-align:center">
                <h3 class="card-title">List of Roles</h3>
            </div>
            <div class="box box-info" style="margin-top:10px">

                @if (Model.Any())
                {
                    @foreach (var role in Model)
                    {
                        @using (Html.BeginForm("DeleteRole", "Administrator", new { id = role.Id }))
                        {
                <div class="card mb-3">
                    <div class="card-header">
                        Role Id: @role.Id
                    </div>
                    <br />

                    <div class="card-body">
                        <h4 class="card-title">@role.Name</h4>
                    </div>
                    <br />
                    <div class="card-footer">
                        <a asp-controller="Administrator" asp-action="EditRole"
                           asp-route-id="@role.Id" class="btn btn-info">
                            <i class="fa fa-edit"></i> Edit
                        </a>

                        <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">

                            <input type="submit" value="Delete" class="btn btn-danger pull-right"
                                   onclick="return confirm('Are you sure you want to delete @role.Name?')" />
                        </form>
                    </div>
                </div>
                            }
                        }
                    }
                else
                {
                    <div class="card">
                        <div class="card-header">
                            No roles created yet
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                Use the button below to create a role
                            </h5>
                            <a class="btn btn-primary" style="width:auto"
                               asp-controller="Admin" asp-action="CreateRole">
                                Create Role
                            </a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

</section>


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/main.js"></script>
}
