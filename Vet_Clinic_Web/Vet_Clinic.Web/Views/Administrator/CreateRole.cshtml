@model Vet_Clinic.Web.Models.CreateRoleViewModel

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">

    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Role</li>
    </ol>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-7 center-block">

                <div style="text-align:center">
                    <h3 class="card-title">New Role</h3>
                </div>

                <div class="box box-info" style="margin-top:10px">
                    <div class="box-header with-border">
                        <form asp-action="CreateRole" asp-controller="Administrator">
                            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                            <div class="form-group">
                                <label asp-for="RoleName" class="control-label"></label>
                                <input asp-for="RoleName" class="form-control" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <a asp-action="ListRoles" class="btn btn-warning pull-right"><i class="fa fa-backward"></i> To List</a>
                                <input type="submit" value="Create"  class="btn btn-success " />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

