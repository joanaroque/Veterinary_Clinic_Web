@model Vet_Clinic.Web.Models.PetViewModel
@{
    ViewData["Title"] = "Edit";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <div style="text-align:center">
                    <h3 class="card-title">Edit Pet</h3>
                </div>
                <div class="box box-info" style="margin-top:10px">
                    <div class="box-header with-border">

                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="OwnerId" />
                            <input type="hidden" asp-for="ImageUrl" />

                            <div class="card-body">
                                <div class="form-group">

                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="Name" class="control-label"></label>
                                                <input asp-for="Name" class="form-control" />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="Breed" class="control-label"></label>
                                                <input asp-for="Breed" class="form-control" />
                                                <span asp-validation-for="Breed" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="SpecieId" class="control-label"></label>
                                                <select asp-for="SpecieId" asp-items="Model.Species" class="form-control"></select>
                                                <span asp-validation-for="SpecieId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="Gender"></label>
                                                <input asp-for="Gender" class="form-control" />
                                                <span asp-validation-for="Gender" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                            {
                                                <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:300px;height:300px;max-width: 100%; height: auto;" />
                                            }
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="Weight"></label>
                                                <input asp-for="Weight" class="form-control" />
                                                <span asp-validation-for="Weight" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-1">
                                            <div class="form-group">
                                                <div class="checkbox">
                                                    <label>
                                                        <input asp-for="Sterilization" /> @Html.DisplayNameFor(model => model.Sterilization)
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="DateOfBirth"></label>
                                                <input asp-for="DateOfBirth" class="form-control" />
                                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-sm-8">
                                            <div class="form-group">
                                                <label asp-for="ImageFile" class="control-label"></label>
                                                <input asp-for="ImageFile" class="form-control" type="file" />
                                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <a asp-action="Index" class="btn btn-warning pull-right">Back to List</a>
                                        <input type="submit" value="Save" class="btn btn-success " />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>