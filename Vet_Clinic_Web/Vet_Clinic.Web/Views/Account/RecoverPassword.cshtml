@model Vet_Clinic.Web.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<br />
<div class="login-box">

    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>

            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="input-group mb-3">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Email" class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <input type="submit" value="Recover password" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </form>

            <p class="mt-3 mb-1">
                <a asp-action="Login" class="text-center">Login</a>
            </p>
            <p class="mb-0">
                <a asp-action="Register" class="text-center">Register New User</a>
            </p>
        </div>

            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>
        </div>
    </div>

<br />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
