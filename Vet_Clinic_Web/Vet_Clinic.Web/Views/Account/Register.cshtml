@model Vet_Clinic.Web.Models.RegisterNewViewModel
@{
    ViewData["Title"] = "Register";
}

<br />
<div class="register-box">

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Register a New User</p>

            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="input-group mb-3">
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="FirstName" class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="LastName" class="fas fa-user"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input asp-for="UserName" type="text" class="form-control" placeholder="User Name">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="UserName" class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input asp-for="Password" type="Password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Password" class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input asp-for="Confirm" type="Password" class="form-control" placeholder="Confirm Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Confirm" class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>

                <div class="col-4">
                    <input type="submit" value="Register" class="btn btn-primary btn-block" />
                </div>
            </form>

            <div class="social-auth-links text-center">
                <p>- OR -</p>
                <a href="#" class="btn btn-block btn-primary">
                    <i class="fab fa-facebook mr-2"></i>
                    Sign up using Facebook
                </a>
                <a href="#" class="btn btn-block btn-danger">
                    <i class="fab fa-google-plus mr-2"></i>
                    Sign up using Google+
                </a>
            </div>
            <a asp-action="Login" class="text-center">I already have a User Name</a>
        </div>
    </div>
</div>
<div class="text-success">
    <p>
        @ViewBag.Message
    </p>
</div>

<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


