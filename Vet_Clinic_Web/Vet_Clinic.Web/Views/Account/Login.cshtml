@model Vet_Clinic.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<br />
<div class="register-box" style="margin-top:20px; margin-bottom:10px">
    <div class="container-fluid">

        <div style="text-align:center">
            <h3 class="card-title">Sign in to start your session</h3>
        </div>

        <div class="box box-info">
            <div class="box-header with-border">

                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="input-group mb-3">
                        <input asp-for="UserName" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope" asp-validation-for="UserName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="Password" class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input sp-for="RememberMe" type="checkbox" id="remember">
                                <label asp-for="RememberMe" for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>

                        <div class="col-4">
                            <input type="submit" value="Login" class="btn btn-warning" />
                        </div>
                    </div>
                </form>

                @if (Model.ExternalLogins.Count > 0)
                {
                    <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                        <div class="social-auth-links text-center mb-3">
                            <p>- OR -</p>

                            <div>
                                @foreach (var provider in Model.ExternalLogins)
                                {
                                <button  type="submit" class="btn btn-block  btn-foursquare"
                                        name="provider" value="@provider.Name"
                                        title="Login using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>

                                    @*<a href="#" class="btn btn-block btn-primary">
                                        <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                                    </a>
                                    <a href="#" class="btn btn-block btn-danger">
                                        <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                                    </a>*@
                                }
                            </div>

                           
                        </div>
                    </form>
                }


                <p class="mb-1">
                    <a asp-action="RecoverPassword" class="text-center">Forgot your password?</a>
                </p>
                <p class="mb-0">
                    <a asp-action="Register" class="text-center">Register New User</a>
                </p>
            </div>
        </div>
    </div>
</div>

<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script src="https://apis.google.com/js/platform.js" async defer></script>
}



