@model Vet_Clinic.Web.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "ChangeUser";
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Vet Clinic - Login</title>

    <!-- Meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Style -->
    <link rel="stylesheet" href="~/login/css/style.css" type="text/css" media="all" />

</head>

<body>
    <!-- login form -->
    <section class="w3l-login-form" style="background: url('../../images/Pets/asa.jpeg')no-repeat center fixed;">
        <div id="form-section">
            <div class="wrapper">

                <!-- logo -->
                <div class="logo">
                    <a class="brand-logo" href="index.html">Change User</a>
                </div>
                <!-- //logo -->
                <!-- form -->
                <div class="login-form">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="form-fields d-grid">
                            <input asp-for="FirstName" type="text" name="FirstName" placeholder="First Name" />
                            <span asp-validation-for="FirstName"></span>
                            <br />
                            <input asp-for="LastName" type="text" name="LastName" placeholder="Last Name" />
                            <span asp-validation-for="LastName"></span>
                        </div>

                        <button type="submit">Update</button>
                    </form>
                </div>

                <div class="new-signup">
                    <p class="signup"><a asp-action="Register" class="signuplink">Register now</a></p>
                </div>
                <!-- //form -->
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>
            </div>
        </div>
    </section>
    <!-- /login form -->
</body>
</html>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


