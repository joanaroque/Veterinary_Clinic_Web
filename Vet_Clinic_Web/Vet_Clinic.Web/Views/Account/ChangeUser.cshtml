@model Vet_Clinic.Web.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "ChangeUser";
}

<br />
<div class="register-box" style="margin-top:10px; margin-bottom:10px">

    <div class="container-fluid">

        <!-- left column -->

        <div style="text-align:center">
            <h3 class="card-title">Change User</h3>
        </div>

        <div class="box box-info">
            <div class="box-header with-border">

                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="input-group mb-3">
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="FirstName" class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span asp-validation-for="LastName" class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-warning" />
                        <a asp-action="ChangePassword" class="btn btn-success pull-right">Change Password</a>
                    </div>
                </form>
                <br />

                <div class="social-auth-links text-center">
                    <p>- OR -</p>
                    <br />
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i>
                        Sign up using Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i>
                        Sign up using Google+
                    </a>
                </div>
            </div>


            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>
        </div>
    </div>
</div>

<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


