<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Vet Clinic Web</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @*este poe a barra superior correta, mas poe as tabelas pro lado..*@
    @*<link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.min.css">*@
    <link rel="stylesheet" href="~/lib/font-awesome/css/bootstrap.css.map">
    <link rel="stylesheet" href="~/lib/font-awesome/css/bootstrap.css">


    <!-- Font Awesome  -->
    <link rel="stylesheet" href="~/fonts/font-awesome-4.7.0/css/font-awesome.css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css">


    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/dist/css/AdminLTE.css">
    <link href="~/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/dist/css/skins/skin-blue.min.css">
    <link href="~/dist/css/skins/_all-skins.css" rel="stylesheet" />


    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition skin-blue sidebar-mini ">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a asp-action="Index" asp-controller="home" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>PE</b>TS</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Veterinary </b> Clinic <i class="fa fa-heartbeat" aria-hidden="true"></i></span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>

                <!-- Navbar Right Menu -->
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administrator</a>
                                <ul class="dropdown-menu">
                                    <li><a asp-controller="Administrator" asp-action="ListUsers">Users</a></li>
                                    <li><a asp-controller="Administrator" asp-action="ListRoles">Roles</a></li>
                                </ul>
                            </li>
                        }
                        <!-- Menu Body -->
                        <li class="user-body">
                            <div class="row">
                                <div class="navbar-collapse collapse">
                                    <ul class="nav navbar-nav navbar-right">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <li> <a asp-controller="Account" asp-action="ChangeUser"> @this.User.Identity.Name</a>  </li>
                                            <li class="navbar-custom-menu">
                                                <a asp-controller="Account" asp-action="Logout">Logout</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="nav-item d-none d-sm-inline-block">
                                                <a asp-controller="Account" asp-action="Login">Login</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                            <!-- /.row -->
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/dist/img/if1.jpg" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p><i class="fa fa-stethoscope" aria-hidden="true"></i> Clinic <i class="fa fa-stethoscope" aria-hidden="true"></i></p>
                    </div>
                </div>
                <form class="form-inline ">
                    <ul class="nav navbar-nav navbar-left">
                    </ul>
                </form>
                <!-- Sidebar Menu -->

                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">Menu</li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("Agent") || User.IsInRole("Doctor"))
                    {
                        <!-- Optionally, you can add icons to the links -->
                        <li class="active">
                            <a asp-controller="Appointments" asp-action="Index">
                                <i class="far fa-calendar-times"></i>
                                <span>  Appointments</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="ServiceTypes" asp-action="Index">
                                <i class="fas fa-concierge-bell"></i>
                                <span>  Service Types</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Assistant" asp-action="Index">
                                <i class="fa fa-female"></i>
                                <span> Assistants</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Doctors" asp-action="Index">
                                <i class="fa fa-user-md"></i>
                                <span> Doctors</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Owners" asp-action="Index">
                                <i class="fas fa-user-friends"></i>
                                <span>  Owners</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Pets" asp-action="Index">
                                <i class="fa fa-paw"></i>
                                <span> Pets</span>
                            </a>
                        </li>

                        <li class="treeview">
                            <a href="#">
                                <i class="fas fa-cat"></i>
                                <i class="fas fa-dog"></i>
                                <i class="fas fa-frog"></i>
                                <i class="fas fa-spider"></i>
                                <i class="fas fa-dragon"></i>
                                <i class="fas fa-fish"></i>
                                <i class="fas fa-hippo"></i>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left "></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="active">
                                    <a asp-controller="Species" asp-action="Index">
                                        Pet Species
                                    </a>
                                </li>
                            </ul>

                        </li>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                    {
                        <li class="active">
                            <a asp-controller="Home" asp-action="MyPets">
                                <i class="fa fa-paw"></i>
                                <span> My Pets</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Home" asp-action="MyAppointments">
                                <i class="fa fa-calendar"></i>
                                <span> My Appointments</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Doctors" asp-action="Index">
                                <i class="fa fa-user-md"></i>
                                <span> Doctors</span>
                            </a>
                        </li>
                    }
                </ul>

                <!-- /.sidebar-menu -->
            </section>
            <partial name="_CookieConsentPartial" />

            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->

            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- Default to the left -->
            <strong>Version 1.0 &copy; 2020 <a href="http://www.uniaozoofila.org/">União Zoolofica</a>.</strong> All rights reserved.
        </footer>
    </div>

    <script src="~/lib/font-awesome/js/jquery.min.js"></script>
    <script src="~/dist/js/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/lib/font-awesome/js/jquery.js"></script>
    <script src="~/lib/font-awesome/js/bootstrap.js"></script>
    <script src="~/dist/js/bootstrap.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
