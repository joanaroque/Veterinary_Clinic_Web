<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Vet Clinic Web</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link rel="stylesheet" href="~/lib/font-awesome/css/bootstrap.css.map"/>
    <link href="~/test/bootstrap.min.css" rel="stylesheet" />
    <link href="~/test/font-awesome.min.css" rel="stylesheet" />

    <!-- Font Awesome  -->
    <link rel="stylesheet" href="~/fonts/font-awesome-4.7.0/css/font-awesome.css"/>
    <link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css"/>

    <link rel="stylesheet" href="~/css/main.css"/>
    <link rel="stylesheet" href="~/dist/css/AdminLTE.css"/>
    <link href="~/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/dist/css/skins/skin-blue.min.css"/>


    <!-- Google Font -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic"/>
</head>
<body class="hold-transition skin-blue sidebar-mini ">
    <div class="wrapper">
        <!-- Main Header -->
        <header class="main-header">
            <!-- Logo -->
            <a asp-action="Index" asp-controller="home" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>PE</b>TS</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Veterinary </b> Clinic <i class="fa fa-heartbeat" aria-hidden="true"></i></span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button" style="padding: 10px 100px 10px 10px">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a asp-area="" asp-controller="Account" asp-action="ChangeUser"> @this.User.Identity.Name</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>  
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/images/Assistants/eu.png" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p id="demo"></p>
                    </div>
                </div>
                <form class="form-inline ">
                    <ul class="nav navbar-nav navbar-left">
                    </ul>
                </form>
                <!-- Sidebar Menu -->

                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">Menu</li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("Agent") || User.IsInRole("Doctor"))
                    {
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-controller="Administrator" asp-action="ListUsers">
                                    <i class="far fa-eye"></i>
                                    <span> Users</span>
                                </a>
                            </li>
                            <li>
                                <a asp-controller="Administrator" asp-action="ListRoles">
                                    <i class="far fa-eye"></i>
                                    <span> Roles</span>
                                </a>
                            </li>
                        }
                        <!-- Optionally, you can add icons to the links -->
                        <li class="active">
                            <a asp-controller="Appointments" asp-action="Index">
                                <i class="far fa-calendar-times"></i>
                                <span>  Appointments</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Assistant" asp-action="Index">
                                <i class="fa fa-female"></i>
                                <span> Assistants</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Doctors" asp-action="Index">
                                <i class="fa fa-user-md"></i>
                                <span> Doctors</span>
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Owners" asp-action="Index">
                                <i class="fas fa-user-friends"></i>
                                <span>  Owners</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Pets" asp-action="Index">
                                <i class="fa fa-paw"></i>
                                <span> Pets</span>
                            </a>
                        </li>

                        <li class="treeview">
                            <a href="#">
                                <i class="fas fa-cat"></i>
                                <i class="fas fa-dog"></i>
                                <i class="fas fa-frog"></i>
                                <i class="fas fa-spider"></i>
                                <i class="fas fa-dragon"></i>
                                <i class="fas fa-fish"></i>
                                <i class="fas fa-hippo"></i>
                                <span class="pull-right-container">
                                    <i class="fa fa-angle-left "></i>
                                </span>
                            </a>
                            <ul class="treeview-menu">
                                <li class="active">
                                    <a asp-controller="Species" asp-action="Index">
                                        Pet Species
                                    </a>
                                </li>
                            </ul>

                        </li>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Customer"))
                    {
                        <li class="active">
                            <a asp-controller="Home" asp-action="MyPets">
                                <i class="fa fa-paw"></i>
                                <span> My Pets</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Home" asp-action="MyAppointments">
                                <i class="fa fa-calendar"></i>
                                <span> My Appointments</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Doctors" asp-action="Index">
                                <i class="fa fa-user-md"></i>
                                <span> Doctors</span>
                            </a>
                        </li>

                        <li>
                            <a asp-controller="Home" asp-action="OwnerAppointmentsHistory">
                                <i class="fa fa-calendar"></i>
                                <span> My past appointments</span>
                            </a>
                        </li>
                    }
                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <partial name="_CookieConsentPartial" />
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->

            @RenderBody()
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- Default to the left -->
            <strong>Version 1.0 &copy; 2020 <a href="https://petclinicjoana.azurewebsites.net/">Vet Clinic Joana</a>.</strong> All rights reserved.
            <strong class="pull-right">Please adopt <a href="http://www.uniaozoofila.org/">a Pet <i class="fa fa-paw"></i></a></strong>

        </footer>
    </div>

    <script src="~/lib/font-awesome/js/jquery.min.js"></script>
    <script src="~/dist/js/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/lib/font-awesome/js/jquery.js"></script>
    <script src="~/lib/font-awesome/js/bootstrap.js"></script>
    <script src="~/dist/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <script>
        let d = new Date().toLocaleDateString("en-EN",
            {
                month: "short",
                weekday: "short",
                day: "2-digit",
                year: "numeric"
            })
        document.getElementById("demo").innerHTML = d;
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
