@model Vet_Clinic.Web.Models.HistoryViewModel

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Histories</li>
    </ol>
</section>

<br />
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6 center-block">

                <div style="text-align:center">
                    <h3 class="card-title">History</h3>
                </div>

                <div class="box box-info" style="margin-top:10px">
                    <div class="box-header with-border">

                        <form asp-action="AddHistory" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PetId" />

                           <div class="row center-block">
                                <partial name="_History" />
                            </div>
                            <div class="form-group">
                                <a asp-action="DetailsPet" asp-route-id="@Model.PetId" class="btn btn-warning pull-right"><i class="fa fa-backward"></i> To list</a>
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
