@model Vet_Clinic.Web.Data.Entities.Owner

@{
    ViewData["Title"] = "Details";
}

    <section class="content-header">
        <ol class="breadcrumb">
            <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
            <li class="active">Owners</li>
        </ol>
    </section>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">

                <div style="text-align:center">
                    <h3 class="card-title">Owner</h3>
                </div>

                <div class="box box-info" style="margin-top:10px">
                    <div class="box-header with-border">

                        <div class="col-sm-8">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.LastName)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.LastName)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.TIN)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.TIN)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.DateOfBirth)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.DateOfBirth)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.PhoneNumber)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.PhoneNumber)
                                </dd>
                                <dt>
                                    # Pets
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Pets.Count)
                                </dd>
                                <dt>
                                    # Appointments
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Appointments.Count)
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i> Edit</a>
                        <a asp-action="AddPet" asp-route-id="@Model.Id" class="btn btn-primary center-block"><i class="fa fa-paw"></i> Add Pet <i class="fa fa-paw"></i></a>
                        <a asp-action="Index" class="btn btn-success  pull-right"><i class="fa fa-backward"></i> Back to List</a>
                    </div>
                </div>
            </div>
        </div>

        <hr />
        @if (Model.Pets.Count == 0)
        {
            <h4>Not pets added yet.</h4>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <div style="text-align:center">
                        <h3 class="card-title">Pets</h3>
                    </div>
                    <div class="box box-info" style="margin-top:10px">

                        <div class="panel-body">
                            <table class="table table-hover table-responsive table-striped" id="MyTable">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().ImageUrl)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Breed)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Weight)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().DateOfBirth)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Gender)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Sterilization)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Specie.Description)
                                        </th>
                                        <th>
                                            # Histories
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Pets)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@Url.Content(item.ImageUrl)" alt="Image" style="width:50px;height:50px;max-width: 100%; height: auto;" />
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Breed)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Weight)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DateOfBirth)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Gender)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sterilization)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Specie.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Histories.Count)
                                            </td>
                                            <td>
                                                <a asp-action="EditPet" class="btn btn-default" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i> </a>
                                                <a asp-action="DetailsPet" class="btn btn-default" asp-route-id="@item.Id"><i class="fa fa-list"></i> </a>
                                                <input type="submit" value="Delete"
                                                       onclick="return confirm('Are you sure you want to delete @item.Name?')" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
}

