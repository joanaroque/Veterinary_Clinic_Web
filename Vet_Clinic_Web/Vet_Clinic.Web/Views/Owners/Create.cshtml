@model Vet_Clinic.Web.Models.RegisterNewViewModel

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Owners</li>
    </ol>
</section>

<br />
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6 center-block">
                <div style="text-align:center">
                    <h3 class="card-title">New Owner</h3>
                </div>
                <div class="box box-info" style="margin-top:10px">
                    <div class="box-header with-border">

                        <form asp-action="Create" enctype="multipart/form-data">

                            <partial name="_User" />

                            <div class="form-group">
                                <input asp-for="UserName" type="email" class="form-control" placeholder="UserName">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span asp-validation-for="UserName" class="fas fa-user-check"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <input asp-for="Password" type="Password" class="form-control" placeholder="Password">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span asp-validation-for="Password" class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="form-group">
                                        <input asp-for="PasswordConfirm" type="Password" class="form-control" placeholder="PasswordConfirm">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span asp-validation-for="PasswordConfirm" class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                <!-- /.box-body -->
                                <div class="form-group">
                                    <a asp-action="Index" class="btn btn-warning pull-right">Back to List</a>
                                    <input type="submit" value="Create" class="btn btn-success " />
                                </div>
                                <!-- /.box-footer -->
</form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /.box -->
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationCurrencyPartial");}

}