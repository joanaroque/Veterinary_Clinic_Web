@model Vet_Clinic.Web.Models.PetViewModel

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Pets</li>
    </ol>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">

                <div style="text-align:center">
                    <h3 class="card-title">New Pet</h3>
                </div>

                <div class="box box-info" style="margin-top:10px">
                    <div class="box-header with-border">

                        <form asp-action="AddPet" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="OwnerId" />

                            <partial name="_Pet" />

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Details" asp-route-id="@Model.OwnerId" class="btn btn-success"><i class="fa fa-backward"> </i> Back to Owner</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
