@model Vet_Clinic.Web.Models.PetViewModel

@{
    ViewData["Title"] = "Create";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Pets</li>
    </ol>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-10 center-block">

                <div style="text-align:center">
                    <h3 class="card-title">New Pet</h3>
                </div>

                <div class="box box-info" style="margin-top:10px">
                    <div class="box-header with-border">

                        <form asp-action="AddPet" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="OwnerId" />
                            <input type="hidden" asp-for="ImageUrl" />

                            <div class="pull-right">
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:400px;height:400px;max-width: 100%; height: auto;" />
                                }
                                else
                                {
                                    <img id="imgprw" alt="Image" width="150" height="300" />
                                }
                            </div>

                            <partial name="_Pet" />

                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                                <a asp-action="Details" asp-route-id="@Model.OwnerId" class="btn btn-warning pull-right"><i class="fa fa-backward"> </i> To Owner</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_ValidationCurrencyPartial");}
    <script type="text/javascript">
        function imagePreview(input) {
            if (input.files && input.files[0]) {
                let fildr = new FileReader();
                fildr.onload = function (e) {
                    $('#imgprw').attr('src', e.target.result);
                }
                fildr.readAsDataURL(input.files[0]);
            }
        }
    </script>
}