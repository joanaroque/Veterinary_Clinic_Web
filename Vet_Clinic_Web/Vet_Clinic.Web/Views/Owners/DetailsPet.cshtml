@model Vet_Clinic.Web.Data.Entities.Pet

@{
    ViewData["Title"] = "Details";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Pets</li>
    </ol>
</section>
<br />

<div class="register" style="margin-top:10px; margin-bottom:10px">

    <div class="container-fluid">

        <div style="text-align:center">
            <h3 class="card-title">Pet</h3>
        </div>

        <div class="box box-info" style="margin-top:10px">
            <div class="box-header with-border">
                <div class="row">
                    <div class="col-md-8">
                        <dl class="dl-horizontal">
                            <dt>
                                Owner
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Owner.User.FirstName)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Breed)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Breed)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DateOfBirth)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DateOfBirth)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Sterilization)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Sterilization)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Gender)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Gender)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Weight)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Weight)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:200px;height:200px;max-height: 100%; width: auto;" />
                        }
                    </div>
                </div>
                <div>
                    <a asp-action="EditPet" asp-route-id="@Model.Id" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i> Edit</a>
                    <a asp-action="Details" asp-route-id="@Model.Owner.Id" class="btn btn-success pull-right"><i class="fa fa-backward"></i> To Owner</a>
                </div>
            </div>
        </div>
    </div>
</div>
<br />


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}
