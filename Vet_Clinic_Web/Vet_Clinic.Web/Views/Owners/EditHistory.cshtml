@model Vet_Clinic.Web.Models.HistoryViewModel

@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Histories</li>
    </ol>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-8 center-block">

                <div style="text-align:center">
                    <h3 class="card-title">Edit Pet History</h3>
                </div>

                <div class="box box-info" style="margin-top:10px">
                    <div class="box-header with-border">
                        <form asp-action="EditHistory" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PetId" />
                            <input type="hidden" asp-for="ServiceTypeId" />

                            <partial name="_History" />

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                <a asp-action="DetailsPet" asp-route-id="@Model.PetId" class="btn btn-success"><i class="fa fa-backward"></i> Back to Pet</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
