@model IEnumerable<Vet_Clinic.Web.Data.Entities.Owner>

@{
    ViewData["Title"] = "Index";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Owners</li>
    </ol>

</section>
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Create New</a>
</p>

<section class="content">
    <div class="row">
        <div class="col-md-9 center-block">
            <div style="text-align:center">
                <h3 class="card-title">Owner</h3>
            </div>
            <div class="box box-info" style="margin-top:10px">

                <div class="box-header with-border">

                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" id="MyTable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Last Name</th>
                                    <th>Email</th>
                                    <th>
                                        # Pets
                                    </th>
                                    <th>
                                        # Appointments
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    @using (Html.BeginForm("Delete", "Owners", new { id = item.Id }))
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Email)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pets.Count)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Appointments.Count)
                                            </td>
                                            <td>
                                                <input type="submit" value="Delete" class="btn btn-danger pull-right"
                                                       onclick="return confirm('Are you sure you want to delete @item.Name?')" />
                                                <a asp-action="Edit" class="btn btn-info pull-right" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i> </a>
                                                <a asp-action="Details" class="btn btn-warning pull-right" asp-route-id="@item.Id"><i class="fa fa-list"></i> </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>

}
