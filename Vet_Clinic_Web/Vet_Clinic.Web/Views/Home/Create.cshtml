@model Vet_Clinic.Web.Models.PetViewModel

@{
    ViewData["Title"] = "Create";
}

    <section class="content-header">
        <ol class="breadcrumb">
            <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
            <li class="active">Pets</li>
        </ol>
    </section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">

                <div style="text-align:center">
                    <h3 class="card-title">New Pet</h3>
                </div>

                <div class="box box-info" style="margin-top:10px">
                    <div class="box-header with-border">

                        <form asp-action="Create" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="OwnerId" />

                            <div class="card-body">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="Name" class="control-label"></label>
                                                <input asp-for="Name" class="form-control" />
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="Weight" class="control-label"></label>
                                                <input type="number" asp-for="Weight" class="form-control" />
                                                <span asp-validation-for="Weight" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="Gender" class="control-label"></label>
                                                <input asp-for="Gender" class="form-control" />
                                                <span asp-validation-for="Gender" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <label asp-for="Breed" class="control-label"></label>
                                                <input asp-for="Breed" class="form-control" />
                                                <span asp-validation-for="Breed" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                 
                                   <div class="row">
                                        <div class="col-sm-5">
                                            <div class="form-group">
                                                <label asp-for="DateOfBirth"></label>
                                                <input asp-for="DateOfBirth" class="form-control" />
                                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-sm-2"></div>
                                        <div class="col-sm-5">
                                            <div class="form-group">
                                                <label asp-for="ImageFile"></label>
                                                <input asp-for="ImageFile" class="form-control" />
                                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a asp-action="MyPets" asp-route-id="@Model.OwnerId" class="btn btn-success"><i class="fa fa-backward"> </i> Back to My Pets</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


