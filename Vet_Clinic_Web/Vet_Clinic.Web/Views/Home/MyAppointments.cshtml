@model IEnumerable<Vet_Clinic.Web.Models.AppointmentViewModel>

@{
    ViewData["Title"] = "Index";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Appointments</li>
    </ol>
</section>
<br />
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<section class="content">
    <div class="row">
        <div class="col-md-10 center-block">
            <div style="text-align:center">
                <h3 class="card-title">My Appointments</h3>
            </div>
            <div class="box box-info" style="margin-top:10px">

                <div class="box-header with-border">
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" id="MyTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Date)
                                    </th>
                                    <th>
                                        Doctor
                                    </th>
                                    <th>
                                        Owner
                                    </th>
                                    <th>
                                        Pet
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AppointmentObs)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsAvailable)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    @using (Html.BeginForm("UnSchedule", "Appoitments", new { id = item.Id }))
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Date)
                                            </td>
                                            <td>
                                                @if (item.IsMine)
                                                {
                                                    @Html.DisplayFor(modelItem => item.Doctor.User.FullName)
                                                }
                                                else if (!item.IsAvailable)
                                                {
                                                    @Html.DisplayFor(modelItem => item.Reserved)
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsMine)
                                                {
                                                    @Html.DisplayFor(modelItem => item.Owner.User.FullName)
                                                }
                                                else if (!item.IsAvailable)
                                                {
                                                    @Html.DisplayFor(modelItem => item.Reserved)
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsMine)
                                                {
                                                    @Html.DisplayFor(modelItem => item.Pet.Name)
                                                }
                                            </td>
                                            <td>
                                                @if (item.IsMine)
                                                {
                                                    @Html.DisplayFor(modelItem => item.AppointmentObs)
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsAvailable)
                                            </td>
                                            <td>
                                                @if (item.IsAvailable)
                                                {
                                                    <a asp-action="Schedule" asp-controller="Home" class="btn btn-default" asp-route-id="@item.Id"><i class="glyphicon glyphicon-plus"></i></a>
                                                }
                                                else
                                                {
                                                    @if (item.IsMine)
                                                    {
                                                        <input type="submit" value="Delete" class="btn btn-danger pull-right"
                                                               onclick="return confirm('Are you sure you want to delete @item.Id?')" />
                                                    }
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {Home
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
 
   <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}
