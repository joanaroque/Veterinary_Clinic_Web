@model Vet_Clinic.Web.Data.Entities.Doctor

@{
    ViewBag.Title = "Edit";
}
<section class="content-header">
    <h1>
        Doctor
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Update Doctor</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="box-body">
                 <input type="hidden" asp-for="DoctorID" />
                <div class="form-group">
                    <label asp-for="Name" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.Name">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.LastName">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Specialty" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.Specialty">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="MedicalLicense" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" value="@Model.MedicalLicense">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="TIN" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.TIN">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.PhoneNumber">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" value="@Model.Email">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Schedule" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.Schedule">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ObsRoom" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" value="@Model.ObsRoom">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.Address">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" value="@Model.DateOfBirth">
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
                <button type="submit" value="Save" class="btn btn-success pull-right">Save</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>