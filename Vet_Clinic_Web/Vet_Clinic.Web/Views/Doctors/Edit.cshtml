@model Vet_Clinic.Web.Models.DoctorViewModel


@{
    ViewData["Title"] = "Edit";
}

<section class="content-header">
    <h1>
        Doctor
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Update Doctor</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" asp-action="Edit" enctype="multipart/form-data">
            <div class="box-body">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Name" class="col-sm-2 control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="col-sm-2 control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Specialty" class="col-sm-2 control-label"></label>
                        <input asp-for="Specialty" class="form-control" />
                        <span asp-validation-for="Specialty" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="MedicalLicense" class="col-sm-2 control-label"></label>
                        <input asp-for="MedicalLicense" class="form-control" />
                        <span asp-validation-for="MedicalLicense" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="ImageFile" class="col-sm-2 control-label"></label>
                        <input asp-for="ImageFile" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="TIN" class="col-sm-2 control-label"></label>
                        <input asp-for="TIN" class="form-control" />
                        <span asp-validation-for="TIN" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="col-sm-2 control-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="col-sm-2 control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Schedule" class="col-sm-2 control-label"></label>
                        <input asp-for="Schedule" class="form-control" />
                        <span asp-validation-for="Schedule" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="ObsRoom" class="col-sm-2 control-label"></label>
                        <input asp-for="ObsRoom" class="form-control" />
                        <span asp-validation-for="ObsRoom" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="col-sm-2 control-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="col-sm-2 control-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                    </div>
                    <div>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:100px;height:150px;max-width:100%; height:auto" />
                        }
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                        <input type="submit" value="Save" class="btn btn-success pull-right" />
                    </div>
                    <!-- /.box-footer -->
                </div>
               
            </div>
        </form>
       
    </div>
    <!-- /.box -->
</section>
