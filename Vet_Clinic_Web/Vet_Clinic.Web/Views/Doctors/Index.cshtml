@model IEnumerable<Vet_Clinic.Web.Data.Entities.Doctor>

@{
    ViewData["Title"] = "Index";
}

<section class="content-header">
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fas fa-home"></i> Home</a></li>
        <li class="active">Doctors</li>
    </ol>
</section>
<br />
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Create New</a>
</p>

<section class="content">
    <div class="row">
        <div class="col-md-10 center-block">
            <div style="text-align:center">
                <h3 class="card-title">Doctor</h3>
            </div>
            <div class="box box-info" style="margin-top:10px">

                <div class="box-header with-border">
                    <div class="panel-body">
                        <table class="table table-hover table-responsive table-striped" id="MyTable">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ImageUrl)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Specialty)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.WorkStart)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.WorkEnd)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    @using (Html.BeginForm("Delete", "doctors", new { id = item.Id }))
                                    {

                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@Url.Content(item.ImageUrl)" alt="Image" style="width:100px;height:150px;max-width:100%; height:auto" />
                                                }
                                            </td>
                                            <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Specialty)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.WorkStart)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.WorkEnd)
                                            </td>
                                            <td>
                                                <input type="submit" value="Delete" class="btn btn-danger pull-right"
                                                       onclick="return confirm('Are you sure you want to delete @item.Name?')" />
                                                <a asp-action="Edit" class="btn btn-info pull-right" asp-route-id="@item.Id"><i class="glyphicon glyphicon-pencil"></i> </a>
                                                <a asp-action="Details" class="btn btn-warning pull-right" asp-route-id="@item.Id"><i class="fa fa-list"></i> </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable();
        });
    </script>
}

