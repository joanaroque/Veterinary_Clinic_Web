@model IEnumerable<Vet_Clinic.Web.Data.Entities.Doctor>

<section class="content-header">
    <h1>
        Doctors
    </h1>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <ol class="breadcrumb">
        <li><a asp-controller="Home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Doctors</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Manage Doctors</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Last Name</th>
                                <th>Specialty</th>
                                <th>Medical License</th>
                                <th>Phone Number</th>
                                <th>Photo</th>
                                <th>Schedule</th>
                                <th>Observation Room</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Specialty)</td>
                                    <td>@Html.DisplayFor(modelItem => item.MedicalLicense)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@Url.Content(item.ImageUrl)" alt="Image" style="width:100px;height:150px;max-width:100%; height:auto" />
                                        }
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Schedule)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ObsRoom)</td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        <a href="" onclick="Delete('@item.Id')">Delete</a>
                                    </td>
                                </tr>
                            }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
